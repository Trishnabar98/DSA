#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int n,c=1,k,i,j;
	cin>>n;
	if(n%2==0)
	    k=n+1;
	else
	    k=n;
	    
	for(i=0;i<n+1;i++)
	{
	    for(j=0;j<k;j++)
	    {
	        if(j==k/2 && i>=1 && i<=n)
	            cout<<c++<<" ";
	       else
	            cout<<n<<" ";
	    }
	    cout<<"\n";
	}
	return 0;
}




input
======
6

output
=======

6 6 6 6 6 6 6 
6 6 6 1 6 6 6 
6 6 6 2 6 6 6 
6 6 6 3 6 6 6 
6 6 6 4 6 6 6 
6 6 6 5 6 6 6 
6 6 6 6 6 6 6 
